<section class="section section--dark">
  <div class="container">
    <div class="col col--8">
      <h1>Personal Details</h1>
      <p><strong>Email:</strong> {{user.email}}</p>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="col col--8">
      <form id="personalDetails" class="form form--actions" method="post">
        <div class="col col--8 col--clear">
          {{form-input questionType="text" label="Full name" name="fullName" value=user.name}}
        </div>

        <div class="col col--8 col--clear">
          {{form-input questionType="text" label="Company" name="company" value=user.company}}
        </div>

        <div class="col col--8 col--clear">
          {{form-input questionType="tel" label="Phone number" name="phone" value=user.phone}}
        </div>

        <div class="form-messages col col--full"></div>

        <div class="actions">
          <button type="submit" class="btn" {{action "updateUser" user.email}}><span>Update Details</span></button>
        </div>
      </form>
    </div>
  </div>
</section>
